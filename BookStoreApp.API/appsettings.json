{
  "ConnectionStrings": {
    "BooksStoreAppDbConnection": "Server=(LocalDb)\\MSSQLLocalDB;Database=BookStoreDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "JwtSettings": {
    "Audience": "BookStoreAPIClient",
    "Duration": 1,
    "Issuer": "BookStoreAPI"
  },
  "AllowedHosts": "*"
}